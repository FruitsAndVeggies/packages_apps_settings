<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/aboutfnv_settings"
    android:key="about_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="fnv_summary"
        android:layout="@layout/about_summary"
    />

    <Preference
        android:key="fnv_webpage"	
        android:title="@string/fnv_webpage"
    />

    <Preference
        android:key="fnv_donate"	
        android:title="@string/fnv_donate"
    />


    <PreferenceCategory
        android:key="fnv_code"
        android:title="@string/fnv_code">

        <Preference
            android:key="fnv_github"	
            android:title="@string/fnv_github"
        />

        <Preference
            android:key="fnv_gerrit"	
            android:title="@string/fnv_gerrit"
        />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="fnv_social"
        android:title="@string/fnv_social">

        <Preference
            android:key="fnv_irc"	
            android:title="@string/fnv_irc"
        />

        <Preference
            android:key="fnv_twitter"	
            android:title="@string/fnv_twitter"
        />

        <Preference
            android:key="fnv_facebook"	
            android:title="@string/fnv_facebook"
        />

        <Preference
            android:key="fnv_googleplus"
            android:title="@string/fnv_googleplus"
        />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="fnv_threads"
        android:title="@string/fnv_threads">

        <Preference
            android:key="fnv_toro"	
            android:title="@string/fnv_toro_title"
            android:summary="@string/fnv_toro_summary"
        />

        <Preference
            android:key="fnv_maguro"	
            android:title="@string/fnv_maguro_title"
            android:summary="@string/fnv_maguro_summary"
        />

    </PreferenceCategory>

</PreferenceScreen>
